		private Movie currentMovie;
		public Movie CurrentMovie
		{
			get => currentMovie;
			set
			{
				currentMovie = value;
				RaisePropertyChanged();

			}
		}
		private List<Movie> movies;
		public List<Movie> Movies
		{
			get
			{
				return movies;
			}
			set
			{
				movies = value;
				RaisePropertyChanged();
			}
		}

		private List<Note> notes;
		public List<Note> Notes
		{
			get => notes;
